" Syntax highlighting and colours
filetype on
syntax on
colorscheme Tomorrow-Night

" Font
set guifont=Menlo\ Regular:h14

" Line number and width
set colorcolumn=90
set number

" Longer history
set hidden
set history=100

" File indenting
filetype indent on
set nowrap
set tabstop=4
set shiftwidth=4
set expandtab
set smartindent
set autoindent

" Normal backspace function
set backspace=indent,eol,start

" Search highlighting
set hlsearch

" Parenthasis matching
set showmatch

" Leader key
let mapleader=" "


